{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "import-name": false,
    "variable-name": false,
    "ter-arrow-parens": false,
    "max-line-length": [true, { "limit": 120 }],
    "no-boolean-literal-compare": 0
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  },
  "defaultSeverity": "warning"
}
